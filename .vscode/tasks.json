{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build and debug active file",
            "command": "g++.exe",
            "args": [
                "-std=c++20",
                //"-pthread",
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                //"-Werror",
                //"-fsanitize=address",
                //"-fsanitize=undefined",
                "-isystem", "${workspaceFolder}\\include",
                "-isystem", "C:\\boost_build",
                "-isystem", "C:\\boost_build\\include\\boost-1_85",
                "-isystem", "C:\\boost_build\\lib",

                "-fsanitize-address-use-after-scope",
                "-fexceptions",
                "-fms-extensions",
                "-fvisibility=hidden",
                "-fPIC",
                "-O0",
                "-g",
                "-o",
                "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                "${workspaceFolder}\\SRC\\*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}